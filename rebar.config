{erl_opts, [debug_info]}.
{deps, [
	{osc, {git, "https://github.com/erlsci/osc", {tag, "2.1.0"}}}
       ]}.

{shell, [
	 % {config, "config/sys.config"},
	 {apps, [sc]}
	]}.
{xref_checks, [
	           undefined_function_calls, undefined_functions, locals_not_used,
		       deprecated_function_calls, deprecated_functions
	      ]}.

{dialyzer, [
	        {warnings, [unknown]}
	   ]}.

